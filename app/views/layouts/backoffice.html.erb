<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Backoffice - Virtualstore</title>
        <%= stylesheet_link_tag    'application', media: 'all' %>
        <%= stylesheet_link_tag    'backoffice', media: 'all' %>
        <%= javascript_include_tag 'application' %>
        <%= javascript_include_tag 'backoffice' %>
        <%= csrf_meta_tags %>
    </head>
    <body>
        <div id="wrapper">
          <%= render partial: "layouts/backoffice_shared/navigation" %>
            <div id="page-wrapper">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-12">
                            <%= yield %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% if notice %>
            <script>
                $.notify("<%= notice %>", "success");
            </script>
        <% end %>

        <% if alert %>
            <script>
                $.notify("<%= alert %>", "error");
            </script>
        <% end %>
    </body>
</html>
